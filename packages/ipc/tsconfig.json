{
	"extends": "@roo-code/config-typescript/base.json",
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["vitest/globals"]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
