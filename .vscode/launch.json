{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}/src"],
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/src/dist/**/*.js"],
			"preLaunchTask": "${defaultBuildTask}",
			"env": {
				"NODE_ENV": "development",
				"VSCODE_DEBUG_MODE": "true"
			},
			"resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
			"presentation": {
				"hidden": false,
				"group": "tasks",
				"order": 1
			}
		},
		{
			"type": "swift",
			"request": "launch",
			"args": [],
			"cwd": "${workspaceFolder:elaiRoo}/src/services/mcp/mcp-server-macos-use",
			"name": "Debug mcp-server-macos-use (src/services/mcp/mcp-server-macos-use)",
			"program": "${workspaceFolder:elaiRoo}/src/services/mcp/mcp-server-macos-use/.build/debug/mcp-server-macos-use",
			"preLaunchTask": "swift: Build Debug mcp-server-macos-use (src/services/mcp/mcp-server-macos-use)"
		},
		{
			"type": "swift",
			"request": "launch",
			"args": [],
			"cwd": "${workspaceFolder:elaiRoo}/src/services/mcp/mcp-server-macos-use",
			"name": "Release mcp-server-macos-use (src/services/mcp/mcp-server-macos-use)",
			"program": "${workspaceFolder:elaiRoo}/src/services/mcp/mcp-server-macos-use/.build/release/mcp-server-macos-use",
			"preLaunchTask": "swift: Build Release mcp-server-macos-use (src/services/mcp/mcp-server-macos-use)"
		}
	]
}
